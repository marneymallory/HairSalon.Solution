@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new Client</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Number)
  @Html.TextBoxFor(model => model.Number)
  @Html.LabelFor(model => model.Preferences)
  @Html.TextBoxFor(model => model.Preferences)

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add Client" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all clients", "Index")</p>